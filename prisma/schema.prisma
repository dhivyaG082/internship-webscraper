generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Company {
  id            Int         @id @default(autoincrement())
  name          String
  location      String      @default("Unknown")
  jobBoard      String      @unique
  linkClass     String
  titleClass    String?
  iframeClass   String?
}

model Listing {
  id            Int         @id @default(autoincrement())
  title         String
  company       String
  link          String      @unique
  addedAt       DateTime    @default(now())
}

model Users {
  email         String      @id
}