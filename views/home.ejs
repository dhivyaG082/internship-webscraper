<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Job Finder</title>
    <link rel="stylesheet" href="/css/home.css">
</head>
<body>

    <!-- Navbar -->
    <%- include('partials/navbar') %>

    <main class="container">

        <!-- Newsletter Signup Card -->
        <section class="newsletter-card">
            <h2>Stay Updated!</h2>
            <p>Sign up for our newsletter to get the latest internships directly to your inbox.</p>
            <form action="/subscribe" method="POST">
                <input type="email" name="email" placeholder="Enter your email" required>
                <button type="submit">Subscribe</button>
            </form>
        </section>

        <!-- Filters -->
        <section class="filters">
            <input type="text" placeholder="Search by company..." name="company-filter">
            <input type="text" placeholder="Search by title..." name="title-filter">
            <select name="location-filter">
                <option value="">All Locations</option>
                <option value="remote">Remote</option>
                <option value="new-york">New York</option>
                <option value="ottawa">Ottawa</option>
            </select>
            <button>Apply Filters</button>
        </section>

        <!-- Job Listings Table -->
        <section class="job-listings">
            <table>
                <thead>
                    <tr>
                        <th>Company</th>
                        <th>Title</th>
                        <th>Location</th>
                        <th>Link</th>
                    </tr>
                </thead>
                <tbody>
                    <!-- Placeholder rows -->
                    <tr>
                        <td>Company A</td>
                        <td>Software Intern</td>
                        <td>Remote</td>
                        <td><a href="#">View</a></td>
                    </tr>
                    <tr>
                        <td>Company B</td>
                        <td>Data Analyst Intern</td>
                        <td>New York</td>
                        <td><a href="#">View</a></td>
                    </tr>
                    <tr>
                        <td>Company C</td>
                        <td>Backend Developer Intern</td>
                        <td>Ottawa</td>
                        <td><a href="#">View</a></td>
                    </tr>
                </tbody>
            </table>
        </section>

    </main>

</body>
</html>
